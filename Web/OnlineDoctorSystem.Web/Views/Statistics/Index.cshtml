@model OnlineDoctorSystem.Web.ViewModels.Statistics.StatsViewModel
@{
    this.ViewData["Title"] = "Статистика";
}
<head>
    <script data-ad-client="ca-pub-1530794777964567" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>
<h1 class="text-center">@this.ViewData["Title"]</h1>

<div class="card rounded-0">
    <h3 class="card-header h5 rounded-0">
        Лекари
    </h3>
    <div class="card-block">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Общо регистрирани практикуващи лекари
                <span class="badge badge-secondary badge-pill ">@this.Model.DoctorsCount</span>
            </li>
        </ul>
    </div>
</div>
<br />
<div class="row no-gutters">
    <div class="col-md-6">
        <div class="card rounded-0">
            <h3 class="card-header h5 rounded-0">
                Брой лекари по градове
            </h3>
            <div class="card-block">
                <ul class="list-group">
                    @foreach (var town in this.Model.Towns.OrderByDescending(x => x.DoctorsCount).ThenBy(x => x.Name))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @town.Name
                            <span class="badge badge-secondary badge-pill">@town.DoctorsCount</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card rounded-0">
            <h3 class="card-header h5 rounded-0">
                Брой пациенти
            </h3>
            <div class="card-block">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Брой пациенти
                        <span class="badge badge-secondary badge-pill">@Model.PatientsCount</span>
                    </li>
                </ul>
            </div>
        </div>
        <br/>
        <br/>
        <div class="card rounded-0">
            <h3 class="card-header h5 rounded-0">
                Брой консултации
            </h3>
            <div class="card-block">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Брой консултации
                        <span class="badge badge-secondary badge-pill">@Model.ConsultationsCount</span>
                    </li>
                </ul>
            </div>
        </div>
        <br/>
        <br/>
        <div class="card rounded-0">
            <h3 class="card-header h5 rounded-0">
                Брой отзива
            </h3>
            <div class="card-block">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Брой отзива
                        <span class="badge badge-secondary badge-pill">@Model.ReviewsCount</span>
                    </li>
                </ul>
            </div>
        </div>
        <br/>
        <br/>
        <div class="card rounded-0">
            <h3 class="card-header h5 rounded-0">
                Брой специалности
            </h3>
            <div class="card-block">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Брой специалности
                        <span class="badge badge-secondary badge-pill">@Model.SpecialtiesCount</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
