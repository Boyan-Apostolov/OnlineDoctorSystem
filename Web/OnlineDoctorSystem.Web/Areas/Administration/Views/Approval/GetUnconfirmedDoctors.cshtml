@model OnlineDoctorSystem.Web.ViewModels.Doctors.ListingApprovalsViewModel
@{
    this.ViewBag.Title = "Непотвърдени лекари";
    Layout = "_Layout";
}
<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>
<br />
<div class="text-center">
<table class="table table-striped table-hover table-sm">
    <tr>
        <th>Име</th>
        <th>Специалност</th>
        <th>Град</th>
        <th>Стаж</th>
        <th >Инфо</th>
        <th >Телефон</th>
        <th>Образование</th>
        <th>Квалификации</th>
        <th>Работни места</th>
        <th>Приеми</th>
        <th>Откажи</th>
    </tr>
    @foreach (var doctor in Model.Doctors)
    {
        <tr>
            <th>@doctor.Name</th>
            <th>@doctor.Specialty.Name</th>
            <th>@doctor.Town.Name</th>
            <th>@doctor.YearsOfPractice</th>
            <th>@doctor.SmallInfo.Substring(0,30)...</th>
            <th>@doctor.Phone</th>
            <th>@doctor.Education.Substring(0,30)...</th>
            <th>@doctor.Qualifications.Substring(0,30)...</th>
            <th>@doctor.Biography.Substring(0,30)...</th>
            <th><a asp-area="Administration" asp-controller="Approval" asp-action="ApproveDoctor" asp-route-doctorId="@doctor.Id" class="btn btn-success">Приемане</a></th>
            <th><a asp-area="Administration" asp-controller="Approval" asp-action="DeclineDoctor" asp-route-doctorId="@doctor.Id" class="btn btn-danger">Отказване</a></th>
        </tr>
    }
</table>
</div>